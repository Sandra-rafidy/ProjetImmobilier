{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-md-3 mt-4">
        <h1 align="center">Connexion</h1>
        
        {% if error%}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form action="{{ path('security_login') }}" method="post" class="form-singing">
            <div class="form-group">
                <input type="email" placeholder="Adress mail ..." required name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input type="password" placeholder="Mots de passe ..." required name="_password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

